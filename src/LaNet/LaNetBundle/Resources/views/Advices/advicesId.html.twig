{% extends "LaNetLaNetBundle::layout.html.twig" %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="/js/fancybox/jquery.fancybox.css" type="text/css" media="screen" />
  <script type="text/javascript" src="/js/fancybox/jquery.fancybox.pack.js"></script>
{% endblock %}

{% block slider %}
     {% endblock %}
{% block content %}
    
<a href="{{ path('la_net_la_net_advices_list') }}" class="button grey" style="margin-top: 20px;">Назад к списку</a>
            
  <div class="row">
        <div class="col col_1_of_1"><h4>{{ advices.title}}</h4></div>
    <div class="col col_1_of_1" style='margin-bottom: 20px;'><img src="{{ asset(advices.getWebPath)}}" style="width:100%;" /></div>
    <div class="col col_1_of_1 post-align-text">
        {{ advices.post | raw}}
    </div>
    <div class="col col_1_of_1" align="center">{%if advices.video %}{{ advices.video | raw}}{% endif%}</div>
    {#<div class="col col_1_of_2" style="color:#2d93b2;">
        Добавлена на сайт {{ events.updated | localizeddate('long', 'short')}}
    </div>#}
    {#<div class="col col_1_of_2" style="color:#2d93b2;">
        Отправить:
    </div>#}
     
   {% if advices.portfolio is not empty %}
    <h5 style="float:left;margin-right: 10px; margin-top: 20px; color:#c2d9b1;" class="clear"></h5><hr align="right" style="width:auto;margin-top: 28px" size="2" color="#AAA" />
  
        <div class="gallery2" style="padding-top: 30px">
            <div class="row clear">
            {% for image in advices.portfolio%}

              <div class="col col_1_of_5">
                <a href="{{ asset(image.getWebPath)}}" rel="group1" class="fancybox" title="{{ image.description }}"><img src="{{ asset(image.getWebPath)}}" /></a>
              </div>
              {% if loop.index % 5 == 0 %}
                 </div> <br> <div class="row clear">
              {% endif %}
            {% endfor %}
            </div>
        </div>
   
        
  {% endif %}
  </div>
{% endblock %}