{% extends "LaNetLaNetBundle::layoutProfile.html.twig" %}


{% block menu %}
  {% include "LaNetLaNetBundle:Salon:menu.html.twig" %}
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <script src="{{ asset('bundles/lanetlanet/js/mastersServicePrice.js') }}"></script>
{% endblock %}
      
{% block profile_content %}
<h1>Услуги и цены:</h1>

<form action="" {{ form_enctype(form) }} method="POST">
        <div class="row errors">
            {{ form_errors(form.services) }}

        </div>

        <ul class="serveces" style="list-style-type: none;" data-prototype="
          {% filter escape %}
             {{ include('LaNetLaNetBundle:Salon:servicePrototype.html.twig', { 'form': form.services.vars.prototype }) }}
          {% endfilter %}">
         {% for service in form.services %}
           <li>
              <div class="row">
                <div class="col col_2_of_4">
                   {{ form_label(service.name) }}
                   {{ form_widget(service.name) }}
                </div>
                <div class="col col_1_of_4">
                   {{ form_label(service.startPrice) }}
                   {{ form_widget(service.startPrice) }}
                </div>
                <div class="col col_1_of_4">
                   {{ form_label(service.endPrice) }}
                   {{ form_widget(service.endPrice) }}
                </div>
             </div>
           </li>
         {% endfor %}
       </ul>
  {{ form_widget(form.services) }}
        {{ form_rest(form) }}
        
</form>
{% endblock %}