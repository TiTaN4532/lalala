{% extends "LaNetLaNetBundle:Master:layoutMaster.html.twig" %}

    
{% form_theme form _self %}

{% block choice_widget_collapsed %}
{% spaceless %}
    {% if required and empty_value is none and not empty_value_in_choices %}
        {% set required = false %}
    {% endif %}
    <select {{ block('widget_attributes') }}{% if multiple %} multiple="multiple"{% endif %}>
        {% if empty_value is not none %}
            <option value=""{% if required and value is empty %} selected="selected"{% endif %}>{{ empty_value|trans({}, translation_domain) }}</option>
        {% endif %}
        {% if preferred_choices|length > 0 %}
            {% set options = preferred_choices %}
            {{ block('choice_widget_options') }}
            {% if choices|length > 0 and separator is not none %}
                <option disabled="disabled">{{ separator }}</option>
            {% endif %}
        {% endif %}
        {% set options = choices %}
        {{ block('choice_widget_options') }}
        <option value="elseService">Другое</option>
    </select>
{% endspaceless %}
{% endblock choice_widget_collapsed %}

{% block stylesheets %}
  {{ parent() }}
  <script src="{{ asset('bundles/lanetlanet/js/mastersServicePrice.js') }}"></script>
{% endblock %}
      
{% block masterContent %}
  {{ parent() }}
<h1>Услуги и цены:</h1>

<form action="{{ path('la_net_la_net_profile_service_price') }}" {{ form_enctype(form) }} method="POST">
        <div class="row errors">
            {{ form_errors(form.services) }}

        </div>
        
        <ul class="serveces" style="list-style-type: none;" data-prototype="{{ form_widget(form.services.vars.prototype)|e }}">
         {% for service in form.services %}
           <li>
              {{ form_widget(service) }}
           </li>
         {% endfor %}
       </ul>
  {{ form_widget(form.services) }}
        {{ form_rest(form) }}
        
</form>
{% endblock %}