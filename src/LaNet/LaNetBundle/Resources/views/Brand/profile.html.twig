{% extends "LaNetLaNetBundle::layoutProfile.html.twig" %}

{% form_theme form 'LaNetLaNetBundle:Form:fields_profile.html.twig' %}
 
{% block stylesheets %}
      {{ parent() }}
      <script src="{{ asset('js/tiny_mce/tinymce.js')}}"></script>
      <script src="{{ asset('bundles/lanetadmin/js/initTinyMCE.js')}}"></script>
     {% endblock %}
      
{% macro phone_prototype(phone) %}
    <div>{{ form_widget(phone.showPhone) }}{{ form_label(phone.showPhone) }}</div>
    <div>+38 ({{ form_widget(phone.operator) }}) {{ form_widget(phone.number) }}</div> 
{% endmacro %}

{% macro mail_prototype(mail) %}
    <div>{{ form_widget(mail.showMail) }}{{ form_label(mail.showMail) }}</div>
    <div>{{ form_widget(mail.name) }}</div>
{% endmacro %}


        
{% block menu %}
  {% include "LaNetLaNetBundle:Brand:menu.html.twig" %}
{% endblock %}
        
      
{% block profile_content %}
<h1>Основная информация</h1>

<form action="" {{ form_enctype(form) }} method="POST" name="{{ form.vars.name }}">
        <div class="row errors">
            {{ form_errors(form) }}
        </div>
       <div class="row">
            <div class="col col_1_of_2">{{ form_widget(form.userInfo.file) }}</div>
            <div class="col col_1_of_2">
                <div class="row">
                    <div class="col col_1_of_1">
                        {{ form_widget(form.userInfo.name) }}
                    </div>
                </div>
                <hr />
            </div>
        </div>
        <hr/>
        {{ form_row(form.userInfo.description) }}
        
       <div style="padding-top:10px; padding-bottom:10px;"><div>{{ form_label(form.userInfo.phone) }}</div>
            {{ form_widget(form.userInfo.phone) }}
         </div>
        {{ form_row(form.userInfo.country) }}
        <hr/>
        {{ form_row(form.userInfo.brandsCategory) }}
        
      
        {#{{ form_row(form.userInfo.category) }}#}
        <hr/>
        
        <h2>Дополнительная информация</h2>
        
        {% if premium == 1 %} 
            
        {{ form_row(form.userInfo.link) }}
        {{ form_row(form.userInfo.linkAdd) }}
        
        {% else %}
        <div>Дополнительная информация доступна только для премиум-брендов. Для активации премиум статуса свяжитесь с администраторами сайта.</div>
        
        {% endif %}
        
        
             {# <div class="row">
