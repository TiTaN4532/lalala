  <div class="row clear pagination">
  {{ knp_pagination_render(eventsList) }}
  </div>
    
    
    
<script>
      $(document).ready(function(){
          $('#add-advert-btn').click(function() {
            
            $('#adverts').show();  
            $('#add-advert-btn').hide();  
            $('#advert-success-message').hide();  
            });
          $('#hide-advert-btn').click(function() {
            
            $('#adverts').hide();  
            $('#add-advert-btn').show();  
            });
        });  
   </script>         
{% endblock %}

            