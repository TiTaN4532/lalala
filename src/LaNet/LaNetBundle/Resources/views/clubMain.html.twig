{% extends "LaNetLaNetBundle::layout.html.twig" %}

{% block slider %}
   {% endblock %}      

{% block content %}
<a href="{{ path('la_net_la_net_master_list') }}" class="tabs">Поиск мастера</a><a href="{{ path('la_net_la_net_salon_list') }}" class="tabs">Поиск салона</a><a href="{{ path('la_net_la_net_school_list') }}" class="tabs">Обучение</a>

<hr style="margin:7px 0 20px 0;" class="clear" />

                        <div class="search-form">
                            <form action="">
                                <div class="search-form-row">
                                    <input placeholder="Поиск" class="search-form-field" type="text" name="name" {% if app.request.query.get('name') %}value="{{ app.request.query.get('name') }}"{% endif %}>
                                    <img class="search-form-icon" src="{{ asset('images/search.png') }}" alt="search-icon">
                                </div>
                                <input class="search-form-btn" type="submit" value="Найти">
                            </form>
                        </div>
        
        
        
       {% if salons %} 
    <section class="holder">
        <h2 class="section-title"><a href="{{ path('la_net_la_net_salon_list') }}">Салоны</a></h2>
        <div class="row-fluid">
            <section class="holder">
                <div class="gallery-wrap">
                    <div class="gallery">
                        {% for post in salons %} 
                        <article class="top-news-item">
                            <a href="{{ path('la_net_la_net_salon_id', {'id': post.id })}}"><img src="{{ asset(post.getWebPath  | imagine_filter('my_main_page_event_small'))}}"</a>
                            <h3 class="item-title"><a href="{{ path('la_net_la_net_salon_id', {'id': post.id })}}">{{ post.name}}</a></h3>
                        </article>
                       {% endfor %}     
                    </div>
                </div>
            </section>
        </div>
   </section>  
     {% endif %}    
     
     {% if schools %} 
    <section class="holder">
        <h2 class="section-title"><a href="{{ path('la_net_la_net_school_list') }}">Обучение</a></h2>
        <div class="row-fluid">
            <section class="holder">
                <div class="gallery-wrap">
                    <div class="gallery">
                        {% for post in schools %} 
                        <article class="top-news-item">
                            <a href="{{ path('la_net_la_net_school_id', {'id': post.id })}}"><img src="{{ asset(post.getWebPath  | imagine_filter('my_main_page_event_small'))}}"</a>
                            <h3 class="item-title"><a href="{{ path('la_net_la_net_school_id', {'id': post.id })}}">{{ post.name}}</a></h3>
                        </article>
                       {% endfor %}     
                    </div>
                </div>
            </section>
        </div>
   </section>                       
       {% endif %}    
       
       
   <section class="holder">
    <h2 class="section-title"><a href="{{ path('la_net_la_net_master_list') }}">Мастера</a></h2>
    <div class="row-fluid">
        <div class="span12">
            <div class="masters">
                {% for master in masters %}
                  <div class="masters-item clearfix">
                      <div class="masters-item-img">
                          <a href="{{ path('la_net_la_net_master_id', {'id': master.id })}}"><img src="{{ asset(master.getWebPath | imagine_filter('my_masters_list'))}}" /></a>
                      </div>
                      <div class="masters-item-info">
                         <a href="{{ path('la_net_la_net_master_id', {'id': master.id })}}"><h3 class="masters-item-title {% if master.inTop != NULL%} starred {% endif%}">{{ master.firstName }} {{ master.lastName }}</h3></a>
                      </div>
                      {% if master.category is not empty %}
                           <div class="masters-item-profession">{% for item in master.category %}{{ item.name }}{% if not loop.last %}, {% endif %}{% endfor %}</div>
                       {% endif %}
                      {% if (master.location and master.location.locality) %}
                          
                              <div class="masters-item-profession">{{ master.location.locality }} {{ master.location.administrativearea }}</div>
                        {% endif %}
                  </div>
                {% else %}
                  Мастеров нет
                {% endfor %}
            </div>  
        </div>
    </div>
   </section>

   <a href="{{ path('la_net_la_net_master_list') }}" class="tabs active">Просмотр всех мастеров</a>
  
  <script type="text/javascript">
      $(document).ready(function() {
          
         $('.gallery').slick({
              infinite: true,
              slidesToShow: 4,
              slidesToScroll: 1
            });
         
      });
  </script>
  
{% endblock %}