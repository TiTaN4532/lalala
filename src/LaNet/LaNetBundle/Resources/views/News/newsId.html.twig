{% extends "LaNetLaNetBundle::layout.html.twig" %}

{% block slider %}
{% endblock %}
{% block content %}
<a href="{{ path('la_net_la_net_news_list') }}" class="button grey" style="margin-top: 20px;">Назад</a>
            
  <div class="row">
    <h3 style="color:#2d93b2;text-align: center;">{{ news.title | upper}}</h3>
    <div class="col col_1_of_1" style='margin-bottom: 20px;'><img src="{{ news.getWebPath | imagine_filter('my_news_big')}}" style="width:100%;" /></div>
    <div class="col col_1_of_1 post-align-text">
        {{ news.post | raw}}
    </div>
    {#<div class="col col_1_of_2" style="color:#2d93b2;">
        Добавлена на сайт {{ news.updated | localizeddate('long', 'short')}}
    </div>#}
    {#<div class="col col_1_of_2" style="color:#2d93b2;">
        Отправить:
    </div>#}
  </div>
    
    {% if news.portfolio is not empty %}
    <h5 style="float:left;margin-right: 10px; margin-top: 20px; color:#c2d9b1;" class="clear"></h5><hr align="right" style="width:auto;margin-top: 28px" size="2" color="#AAA" />
  
        <div class="gallery2" style="padding-top: 30px">
            <div class="row clear">
            {% for image in news.portfolio%}

              <div class="col col_1_of_5">
                <a href="{{ asset(image.getWebPath)}}" rel="group1" class="fancybox" title="{{ image.description }}"><img src="{{ asset(image.getWebPath)}}" /></a>
              </div>
              {% if loop.index % 5 == 0 %}
                 </div> <br> <div class="row clear">
              {% endif %}
            {% endfor %}
            </div>
        </div>
   
        
  {% endif %}
    
    
{% endblock %}