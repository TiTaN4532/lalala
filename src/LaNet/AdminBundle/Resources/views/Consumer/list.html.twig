{% extends "LaNetAdminBundle::layout.html.twig" %}

{% block stylesheets  %}
  {{ parent() }}
  <script src="{{ asset('bundles/lanetadmin/js/consumers.js')}}"></script>
{% endblock %}
  
{% block content %}
    <a href="{{ path('la_net_admin_consumers') }}"> < Назад</a>
    <h1>Потребители:</h1>
    <div class="results">
        {% for flashMessage in app.session.flashbag.get('notice_Consumer') %}
          <div class="flash-notice success">
              {{ flashMessage }}
          </div>
        {% endfor %}
    </div>
    {#<div id="users-nav">
        <span><a href="" class="users-filter active-link" data="">#</a></span>
        <span><a href="" class="users-filter" data="">0-9</a></span>
        {% for letter in 'а'..'я' %}
            <span><a href="" class="users-filter" data="{{letter}}">{{letter|upper}}</a></span>
        {% endfor %}
    </div>#}
    <div style="margin-top: 30px;" id="users-list">
       {% for item in items %}
    <div class="user-item">
        
        {#<div class="image col col_1_of_6 tablet_1_of_3 mobile_1_of_1"><img src="{{ asset(item.userInfo.getWebPath) | imagine_filter('my_master_thumb_medium') }}"></div>#}
      <div class="col col_2_of_6 tablet_1_of_3 mobile_1_of_1">
            Email: <br />
            <span>{{ item.email }}</span>
      </div>  
      <div class="col col_2_of_6 tablet_1_of_3 mobile_1_of_1">
            ФИО: <br />
            <span>{{ item.userInfo.firstname }} {{ item.userInfo.lastname }}</span>
        </div>
        <div class="col col_1_of_6 tablet_1_of_3 mobile_1_of_1">
            Дата регистрации: <br />
                <span> {{item.created|date("m/d/Y") }}</span>
            </div>

        <div class="col col_1_of_6 tablet_1_of_3 mobile_1_of_1">
            <a href="javascript:void(0)" class="remove-consumer button" data="{{ item.id }}">Удалить</a>
        </div>
    </div>
    <div class="clear"></div>
    <hr>
{% endfor %}
{{ knp_pagination_render(items) }}
    </div>
    
    <script>
      $(document).ready(function(){
  
        $('a.remove-consumer').click(function() {
          var link = $(this);
          $.ajax({
            url: Routing.generate('la_net_admin_ajax_delete_consumer', {'id':link.attr('data')}),
            success     : function(data) {
                    link.parents('.user-item').remove();
                 }
            });
        });
      });
    </script>
{% endblock content %}
    