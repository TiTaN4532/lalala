  <script>
      $(document).ready(function(){
        $('#cancel-advices-btn').click(function() {
               window.location = Routing.generate('la_net_admin_brands_categories_list');
            });
            
            
             {% if brand.id %}
        $('.remove-image').click(function(event) {
        event.preventDefault();
          var el = $(this);
          $.ajax({
              url         : Routing.generate('la_net_admin_brands_categories_remove_image:', {'id': {{ brand.id }}}),
              success     : function(data) {
                if(data) { 
                  el.prev('img').remove();
                  el.remove(); } }
          })
      })
      {% endif %}
        });
  </script>
  
  
